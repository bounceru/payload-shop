<!doctype html>
<html>
  <head>
    <meta name="viewport" content="width=device-width,initial-scale=1"/>
    <style>
      /* Basic resets + inlined styles will be "juiced" by juice library */
      body,html {
        margin: 0;
        padding: 0;
      }
      .header {
        padding: 20px;
        text-align: center;
      }
      .container {
        width: 100%;
        max-width: 600px;
        margin: 0 auto;
        background: #ffffff;
        padding: 2rem;
      }
      .cta-button {
        display: inline-block;
        padding: 14px 24px;
        background-color: #222222;
        color: #ffffff;
        text-decoration: none;
        border-radius: 4px;
        font-size: 14px;
        text-align: center;
      }
      .logo {
        max-height: 70px;
        margin-bottom: 10px;
        max-width: 100%;
      }

      /* ----------- RESPONSIVE MEDIA QUERY ----------- */
      @media only screen and (max-width: 600px) {
        .container {
          width: 100% !important;
          max-width: 100% !important;
          padding: 1rem !important;
        }
        .header {
          padding: 10px !important;
        }
      }
    </style>
  </head>
  <body style="background-color: #fff; font-family: sans-serif;">
    <!-- Only show header if skipHeader is NOT true -->
    <% if (!skipHeader) { %>
      <div class="header">
        <% if (brandLogoUrl) { %>
          <img src="<%= brandLogoUrl %>" alt="Shop Logo" class="logo"/>
        <% } %>
        <h1 style="margin-bottom: 0;"><%= headline %></h1>
      </div>
    <% } %>

    <div class="container">
      <%- content %>

      <!-- CTA Button -->
      <% if (cta && cta.buttonLabel && cta.url) { %>
        <p style="margin-top: 1.5rem; text-align: center;">
          <a href="<%= cta.url %>" class="cta-button">
            <%= cta.buttonLabel %>
          </a>
        </p>
      <% } %>
    </div>
  </body>
</html>
